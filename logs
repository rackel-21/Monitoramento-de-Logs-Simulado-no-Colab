import re
def verificar_senha(senha):
    tamanho = len(senha) >= 8
    minuscula = re.search(r"[a-z]", senha)
    maiuscula = re.search(r"[A-Z]", senha)
    numero = re.search(r"[0-9]", senha)
    simbolo = re.search(r"[!@#$%^&*(),.?\":{}|<>]", senha)

    pontuacao = sum([tamanho, bool(minuscula), bool(maiuscula), bool(numero), bool(simbolo)])
    if pontuacao == 5:
        status = "Forte üí™"
    elif pontuacao >= 3:
        status = "M√©dia ‚ö†Ô∏è"
    else:
        status = "Fraca ‚ùå"
    
    print(f"Senha: {senha}")
    print(f"For√ßa: {status}")
    print("Sugest√µes para melhorar:")

    if not tamanho:
        print("- Use pelo menos 8 caracteres")
    if not minuscula:
        print("- Adicione letras min√∫sculas")
    if not maiuscula:
        print("- Adicione letras mai√∫sculas")
    if not numero:
        print("- Adicione n√∫meros")
    if not simbolo:
        print("- Adicione s√≠mbolos especiais (!@#$...)")
    print("-"*30)

senhas = ["12345", "senha123", "Senha123!", "P@ssw0rd2025!"]
for s in senhas:
    verificar_senha(s)


import time
import re
from IPython.display import clear_output

eventos_suspeitos = [
    r"falha de login",
    r"senha incorreta",
    r"acesso negado",
    r"erro cr√≠tico"
]

def verificar_evento(linha):
    return any(re.search(padrao, linha, re.IGNORECASE) for padrao in eventos_suspeitos)

simulacao_log = [
    "Usuario logado com sucesso",
    "falha de login: usuario admin",
    "Acesso negado para usuario teste",
    "Opera√ß√£o conclu√≠da",
    "erro cr√≠tico no sistema",
    "Usuario logado com sucesso",
    "senha incorreta: usuario teste"
]

print("Monitoramento de logs iniciado... ‚è≥")
for linha in simulacao_log:
    clear_output(wait=True)
    alerta = "‚ö†Ô∏è ALERTA" if verificar_evento(linha) else "INFO"
    print(f"{alerta}: {linha}")
    time.sleep(1)
